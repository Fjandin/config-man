{
    "compilerOptions": {
        "allowJs": false,
        "checkJs": false,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "target": "es2017",
        "lib": ["es2017", "esnext.asynciterable"],
        "module": "commonjs",
        "outDir": "dist",
        "baseUrl": "../src",
        "sourceMap": true,
        "paths": {
            "*": ["*"],
            "index": ["index"]
        }
    },
    "exclude": ["dist"],
    "include": ["./**/*.ts"]
}
